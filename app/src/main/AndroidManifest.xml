<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.getnearbyrestrarunt">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icons8_restaurant_48"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icons8_restaurant_48"
        android:supportsRtl="true"
        android:theme="@style/Theme.GetNearByRestrarunt">
        <activity android:name=".ActivityAndInterface.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".ActivityAndInterface.RestaurantDetails"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:parentActivityName=".ActivityAndInterface.MainActivity" />
        <activity
            android:name=".ActivityAndInterface.SplashScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>